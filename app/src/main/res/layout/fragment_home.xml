    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".view.telaprincipal.ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/imgTopo"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:src="@drawable/logosemfundo"
            android:layout_gravity="center_horizontal"
            />


    <Button
        android:id="@+id/btnPeito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Peito"
        />

        <Button
            android:id="@+id/btnAbdomen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abdomen"
            />


        <Button
            android:id="@+id/btnPerna"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pernas"
            />



    <Button
        android:id="@+id/btnOmbros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ombros"
         />


        <Button
            android:id="@+id/btnBracos"
            android:layout_width="match_parent"
